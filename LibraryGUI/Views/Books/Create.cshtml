@using LibraryGUI.ViewModels
@model Book

<h1>@ViewData["Title"]</h1>

<form method="post">
    <div>
        <label for="Title">Název</label>
        <input type="text" id="Title" name="Title" value="@Model.Title" required />
    </div>
    <div>
        <label for="Author">Autor</label>
        <input type="text" id="Author" name="Author" value="@Model.Author" required />
    </div>
    <div>
        <label for="Category">Kategorie</label>
        <input type="text" id="Category" name="Category" value="@Model.Category" />
    </div>
    <div>
        <label for="Description">Popis</label>
        <textarea id="Description" name="Description">@Model.Description</textarea>
    </div>
    <div>
        <label for="ISBN">ISBN</label>
        <input type="text" id="ISBN" name="ISBN" value="@Model.ISBN" />
    </div>
    <div>
        <label for="Location">Umístění</label>
        <input type="text" id="Location" name="Location" value="@Model.Location" />
    </div>
    <div>
        <label for="Status">Status</label>
        <input type="text" id="Status" name="Status" value="@Model.Status" />
    </div>
    <button type="submit">Uložit</button>
</form>

<a href="/Books">Zpět</a>
